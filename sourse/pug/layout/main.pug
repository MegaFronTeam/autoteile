include include.pug
include js-css.pug
include ../blocks/modal/_modal.pug

include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sAbout/_sAbout.pug
include ../blocks/sProduct/_sProduct.pug
include ../blocks/sAdvantages/_sAdvantages.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/footer/_footer.pug

block variables
doctype html
html(lang= lan.lang)
	head
		meta(charset="utf-8")

		block title
			title= lan.title
		meta(name="description", content="о чем страница")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport", content="width=device-width,initial-scale=1.0,  shrink-to-fit=no")
		link(type="image/ico", href='img/favicon.ico', rel='shortcut icon') 
		<meta name="format-detection" content="telephone=no"> 
		+allcss()
	//- style.
	//- 	.loaded_hiding {  opacity: 0; pointer-events: none;  } .loaded_hiding::before { display: none; }
	//- body.loaded_hiding(class= mainPage) 
	body(class=mainPage data-bg=bg) 
		+top-nav(lan.orderCall)
			+mnu(lan.nav)
		#fullpage
			+headerBlock(lan.header)
			+sAbout(lan.about)
			+sProduct(lan.product)
			+sAdvantages(lan.advantages)
			+sContact(lan.contact)
		+footer(lan.footer)
		+modal(lan)
		+changeLang(lan.lang)
	
		block pagecontent
			h3 content

		+allcjs()
		
		